<%= simple_form_for @card, :url => url_for(:action => 'compare_texts', :controller => 'cards'), :method => :post do |f| %>
  <%= f.error_notification %>
  <% unless @card.image_file_name.nil? %>
    <%= image_tag @card.image.url(:medium) %> 
  <% end %>
  <br/>
  <%= @card.translated_text %>
  
  <br/>
  <input id="user_original_text" name="user_original_text" class="form-control" placeholder="Введите перевод" />
  <br/>

  <%= hidden_field_tag "id", @card.id %>

  <%= f.button :submit, value: "Проверить" %>
<% end %>