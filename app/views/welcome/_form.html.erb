<%= simple_form_for @card, :url => url_for(:action => 'compare_texts', :controller => 'welcome'), :method => :post, :remote => true do |f| %>
  <%= f.error_notification %>
  <% unless @card.image_file_name.nil? %>
    <%= image_tag @card.image.url(:medium) %> 
  <% end %>
  <br/>
  <%= @card.translated_text %>
  
  <br/>
  <input id="user_original_text" name="user_original_text" class="form-control" placeholder=<%= t("simple_form.placeholder.input_translation") %> />
  <br/>

  <%= hidden_field_tag "id", @card.id %>
  <%= hidden_field_tag :quality_timer %>

  <%= f.button :submit, value: t("simple_form.value.check"), id: "translate" %>
<% end %>