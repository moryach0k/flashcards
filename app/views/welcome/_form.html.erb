<%= simple_form_for @card do |f| %>
  <%= f.error_notification %>

  <%= @card.translated_text%>
  
  <br/>
  <input id="user_original_text" class="form-control" placeholder="Введите перевод" />
  <br/>

  <%= hidden_field_tag 'original_text', @card.original_text %>

  <%= f.button :submit, value: "Проверить" %>
<% end %>