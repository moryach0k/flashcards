<p id="notice"><%= notice %></p>

<h1><%= t("user.view.all_users") %></h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to t("views.button.show"), user %></td>
        <td><%= link_to t("views.button.edit"), edit_user_path(user) %></td>
        <td><%= link_to t("views.button.delete"), user, method: :delete, data: { confirm: t("confirm") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("user.view.new_user"), new_user_path %>
