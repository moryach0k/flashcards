<p id="notice"><%= notice %></p>

<div class="panel panel-default">

  <div class="panel-heading">Все колоды</div>

  <table class="table">

    <% @decks.each do |deck| %>
      <tr>
        <% if deck.current_deck?(current_user.current_deck) %>
          <td><%= link_to deck.name+"(Текущая)", deck_path(deck) %></td>
        <% else %>
          <td><%= link_to deck.name, deck_path(deck) %></td>
        <% end %>
        <td><%= link_to "Сделать текущей колодой", set_current_deck_path(deck) %></td>
        <td><%= link_to "Добавить карточку", new_deck_card_path(deck), id: "add_card" %></td>
        <td><%= link_to "Редактировать", edit_deck_path(deck) %></td>
        <td><%= link_to "Удалить", deck_path(deck), 
        method: :delete, 
        data: {confirm: "Вы уверены?"} %></td>
      </tr>
    <% end %>

  </table>

</div>

<p> <%= link_to "Добавить колоду", new_deck_path, id: "add_deck" %> </p>