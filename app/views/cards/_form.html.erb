<%= simple_form_for [:deck, @card],
  wrapper: :inline_form,
  html: { multipart: true, class: 'form-inline' } do |f| %>
  <%= f.error_notification %>

  <%= f.input :original_text, placeholder: t("simple_form.placeholder.original_text") %>

  <%= f.input :translated_text, placeholder: t("simple_form.placeholder.translated_text") %>

  <%= f.input :image, as: :file %>

  <%= f.button :submit, id: "add_card_btn" %>
<% end %>